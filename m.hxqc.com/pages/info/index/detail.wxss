.info_iscrollBox {
  height: calc(100% - 4rem);
  height: -webkit-calc(100% - 4rem);
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.info_ctbox {
  padding: 0 0.6rem 2rem;
}

.info_ctbox .title {
  padding: 0.8rem 0 0.2rem;
  font-size: 34rpx;
  line-height: 1.5rem;
  font-weight: bold;
}

.info_ctbox .lab {
  font-size: 26rpx;
  color: #999;
  padding-bottom: 0.4rem;
  border-bottom: 1px solid #d5d5d5;
  margin-bottom: 0.6rem;
}

.info_ctbox .icontent {
  font-size: 30rpx;
  line-height: 1.52rem;
}
.info_ctbox .icontent view{width: 100%;}
.info_ctbox .icontent image {
  margin: 0.3rem 0;
  width: 100%;


}

/*相关推荐文章*/

.info_ctRelated {
  background-color: #f0f0f0;
  margin-top: 0.8rem;
}

.info_ctRelated .list text {
  display: block;
  padding: 0 0.45rem;
  line-height: 1.8rem;
  height: 1.8rem;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
  color: #444;
}

/*推荐车型详情*/

.info_ctlist {
  background-color: #f0f0f0;
  margin-top: 0.8rem;
}

.info_cuti {
  display: block;
  height: 1.5rem;
  line-height: 1.5rem;
  margin-bottom: .3rem;
}

.info_cuti text {
  position: relative;
  height: 1.5rem;
  float: left;
  background: #c73949 url(http://m.hxqc.com/wxapp/info/sanj.png) no-repeat right 0/auto 100%;
  color: #fff;
  padding: 0 1.1rem 0 0.6rem;
  font-weight: normal;
  font-size: 30rpx;
}

.info_ctlist view:last-child {
  border-bottom: 0;
}

.info_ctlist>view {
  padding: 0.4rem;
}

.info_ctlist view .pic {
  width: 100%;
  display: block;
 /* max-height: 10rem;
  min-height: 7rem;*/
}

.info_ctlist view .d {
  font-size: 30rpx;
  line-height: 1.2rem;
  padding: 0.7rem 0 0.2rem;
  color: #252525;
}

.info_ctlist view .p {
  font-size: 28rpx;
  color: #909090;
}

.info_ctlist view .p span {
  color: #c73949;
}
