page {height:100%;}
body{background-color: #FAFAFA;}
image{width:100%;}
.clearfix{zoom: 1;}
/*首页*/
.toContrast{position: fixed; box-sizing:border-box; bottom:10%; text-align: center; right:5%; width:2.5rem; height:2.5rem; line-height: .9rem; padding-top: .3rem; border-radius:50%; background-color: #ff7043; color:#fff; box-shadow:0 2px 5px 1px rgba(0,0,0,.2);}
.info_banner{position: relative;}
.info_banner span{position: absolute; left:0; bottom: 0; width: 100%; height: 1.4rem; line-height: 1.4rem; background: rgba(0,0,0,.6); color:#fff; font-size: 28rpx; box-sizing:border-box; overflow: hidden; text-overflow:ellipsis; white-space: nowrap; padding:0 3.8rem 0 .6rem;}
.info_banner image{width: 100%; height: 100%;}
.if_title_group{height: 2.4rem; background-color: #f6f6f6; border-bottom:1px solid #e1e1e1; box-sizing:border-box; overflow: hidden;}
.if_title_group .vi_a{float: left; font-size: 28rpx; color:#797979; line-height: 2.3rem;width: 25%;text-align: center;}
.if_title_group .vi_a.on{border-bottom: 3px solid #ff8867; color:#ff8867;}
.if_title{padding: 0 .6rem; font-size: .32rem; color:#333; margin-top: .6rem; }
.if_hlist{}
.if_hlist .vi_a{display: block; overflow: hidden; padding:.6rem; border-bottom: 1px solid #e1e1e1;}
.if_hlist .sm .pic{float: left; width: 5.4rem; max-height:3.5rem;}
.if_hlist .sm .inner{margin-left: 6rem;}
.if_hlist .bg .pic{float: left; width: 32%; margin-left: 2%; max-height:3.5rem;}
.if_hlist .bg .pic:first-child{margin-left: 0;}
.if_hlist .bg .inner{padding-top: .5rem;}
.if_hlist .bg .inner .t{padding-top:3.5rem;}
.if_hlist .bg .inner .d{margin-top: .4rem;}
.if_hlist .t{font-size: 28rpx; color:#666;}
.if_hlist .d{margin-top: 1.2rem; height: .8rem; line-height: .8rem; font-size: 28rpx; color:#999;}
.if_hlist .d span{}
.if_hlist .d em{float: right; }