      <view style="height:.64rem;background-color:#efefef;"></view>
      <view class="na">
        <view class="span">
          <text class="point">*</text>联系人</view>
        <image class="img" src="http://www.tm.hxqc.com/wxapp/usedcar/icon-selling.png"></image>
        <input type="text" class="edit text"name="contacts" value="{{contacts}}" disabled="{{real_disabled}}" placeholder="请输入" />
