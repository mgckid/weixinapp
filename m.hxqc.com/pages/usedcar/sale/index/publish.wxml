          <text class="point">*</text>手机号码</view>
        <image class="img" src="http://www.tm.hxqc.com/wxapp/usedcar/icon-selling.png"></image>
        <view class="edit phone">
          <input type="number" class="phoneInput" name="phone_num" value="{{phone_num ? phone_num : mobile}}" disabled="{{phone_num_disabled}}" placeholder="请输入" maxlength="11" bindinput="mobileBlur" />
        </view>
        <view class="sms_verify" id="getmCode" style="right: .5rem" data-sendtype="10" catchtap="onSendVerify">获取验证码</view>
      </view>
      <view class="na">
        <view class="span">
          <text class="point">*</text>验证码</view>
        <image class="img" src="http://www.tm.hxqc.com/wxapp/usedcar/icon-selling.png"></image>
