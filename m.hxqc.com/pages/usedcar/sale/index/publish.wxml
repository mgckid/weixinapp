<import src="/template/loading.wxml" />
<template is="pageLoading" data="{{pageLoading}}" />

<view class="body" style="background-color: #fff;" catchtap="onClickChoose">
  <form id="doExchange" bindsubmit="formSubmit">
    <view class="filter-group1 filter-self filter-platform">
      <view class="na">
        <view class="span">
          <text class="point">*</text>品牌车型</view>
          <view bindtap="onClickBrand">
            <text class="tips special" style="width:55%;left:35%;">{{modelname ? modelname : '请选择品牌车型，没有则点击添加即可'}}</text>
          </view>
          <text class="add" data-display="#ftr-addbrand" style="position: absolute;right: .68rem;" catchtap="ftrAddbrand">添加</text>
          <input type="text" class="hidden" name="car_source_no" value="{{car_source_no}}" />
        </view>
      <view class="na" catchtap="onClickColor">
        <view class="span">
        <text class="point">*</text>车身颜色</view>
        <text class="tips">{{car_color ?car_color : '请选择'}}</text>
        <image class="img" src="http://www.tm.hxqc.com/wxapp/usedcar/icon-rjt.png"></image>
        <view class="ftr-color {{switch_color_on}}">
          <view class="colorchoise-head">
            <block wx:if="{{car_color}}">
              <view class="clearfix">
                <view class="span" style="background-color: {{car_colorcode}}"></view>
                <text class="em">{{car_color}}</text>
              </view>
              <image class="img" src="http://www.tm.hxqc.com/wxapp/usedcar/icon-bottomarrow.png"></image>
            </block>
          </view>
          <scroll-view class="" scroll-y="true">
            <view class="colorchoise-wrap">
              <block wx:for="{{saleFilter.color}}">
                <view class="colorchoise clearfix" data-carcolor="{{item.detail_dic_name}}" data-carcolorcode="{{item.detail_dic_code}}" catchtap="onClickColorSub">
                  <view class="span" style="background-color: {{item.detail_dic_code}};"></view>
                  <text class="em">{{item.detail_dic_name}}</text>
                </view>
              </block>
            </view>
          </scroll-view>
        </view>
      </view>
      <view class="na" catchtap="onClickLevel">
        <view class="span">
          <text class="point">*</text>车辆级别
        </view>
        <image class="img" src="http://www.tm.hxqc.com/wxapp/usedcar/icon-rjt.png"></image>
        <text class="tips">{{level ? level : '请选择'}}</text>
        <text class="tb"></text>
      </view>
      <view class="na" catchtap="onClickGearbox">
        <view class="span">
          <text class="point">*</text>变速箱
        </view>
        <image class="img" src="http://www.tm.hxqc.com/wxapp/usedcar/icon-rjt.png"></image>
        <text class="tips">{{gearbox ? gearbox : '请选择'}}</text>
        <text class="tb"></text>
      </view>
      <view class="na">
        <view class="span">
          <text class="point">*</text>排量
        </view>
        <image class="img" src="http://www.tm.hxqc.com/wxapp/usedcar/icon-selling.png"></image>
        <text class="small" style="right: .5rem">L</text>
        <input type="digit" class="edit text" name="displacement" value="{{displacement}}" disabled="{{dis_disabled}}" placeholder="请输入排量" style="width:59%;" />
      </view>
      <view class="na" bindtap="onClickRegion">
        <view class="span">
          <text class="point">*</text>车牌所在地
        </view>
        <image class="img" src="http://www.tm.hxqc.com/wxapp/usedcar/icon-rjt.png"></image>
        <text class="tips">{{index_province_name}} {{index_city_name}} </text>
        <text class="tb"></text>
        </view>
      <view class="na">
        <view class="span">
          <text class="point">*</text>表显里程</view>
        <image class="img" src="http://www.tm.hxqc.com/wxapp/usedcar/icon-selling.png"></image>
        <text class="small" style="right: .5rem">万公里</text>
        <input type="digit" class="edit text" name="car_mileage" value="{{carInfo.car_mileage ? carInfo.car_mileage : car_mileage}}" placeholder="最多两位小数" style="width:49%;" />
      </view>
      <view class="na">
        <view class="span">
          <text class="point">*</text>首次上牌时间</view>
        <image class="img" src="http://www.tm.hxqc.com/wxapp/usedcar/icon-rjt.png"></image>
        <picker class="tb" bindchange="datePickerChange" mode="date" value="{{first_on_card}}" data-type="first_on_card" start="1990-11-11" end="2022-01-11">{{first_on_card ? first_on_card : '请选择'}} </picker>
