      </view>
      <view class="na">
        <view class="span">
          <text class="point"></text>新车价</view>
        <image class="img" src="http://www.tm.hxqc.com/wxapp/usedcar/icon-selling.png"></image>
        <text class="small" style="right: .5rem">万元</text>
        <input type="digit" class="edit text" name="new_car_price" value="{{new_car_price}}" disabled="{{new_car_price_disabled}}" placeholder="最多两位小数" style="width:49%;" />
