 <!-- 头部图片 -->
  <view class="ucar-pic">
    <navigator url="">
      <image class="pic" src="{{personDescribe.path}}" alt=""></image>
    </navigator>
    <view class="number">车源编号：{{personDescribe.car_source_no}}</view>
    <image src="http://www.tm.hxqc.com/wxapp/usedcar/userselling-list.png" alt="" class="picIcon" />
  </view>
  <view class="ucar-text">
    <view class="title">{{personDescribe.car_name}}</view>
    <view class="sec">
        <view class="info">上牌时间：{{personDescribe.first_on_card}}</view>
        <view class="info fr" style="float: right">里程：{{personDescribe.car_mileage}}万公里</view>
    </view>
    <view class="price">￥{{personDescribe.estimate_price}}万</view>
   </view>
   <view class="ucar-text">
    <view class="sec">
        <view class="info">上传时间：{{personDescribe.publish_time}}</view>
    </view>
    <view class="sec">
        <view class="info">车辆状态：
            <block wx:if="{{personDescribe.check_status == 2}}">
                <block wx:if="{{personDescribe.product_status == 0}}">待上架</block>
                <block wx:if="{{personDescribe.product_status == 1}}">下架</block>
                <block wx:if="{{personDescribe.product_status == 2}}">下架</block>
                <block wx:if="{{personDescribe.product_status == 3}}">上架</block>
                <block wx:if="{{personDescribe.product_status == 4}}">已售</block>
            </block>
            <block wx:else>
                <block wx:if="{{personDescribe.check_status == 1}}">待审核</block>
                <block wx:if="{{personDescribe.check_status == 3}}">未通过</block>
            </block>
        </view>
    </view>
    <block wx:if="{{personDescribe.check_status == 3}}">
        <div class="sec">
            <p class="info">查看原因：</p>
            <p class="info" style="width: 10.5rem;">{{personDescribe.reason}}</p>
        </div>
    </block>
    <view class="handle">
        <block wx:if="{{personDescribe.publish_from == 2}}">
            <block wx:if="{{personDescribe.check_status == 2}}">
                <block wx:if="{{personDescribe.product_status == 3}}">
                   <!--  <view class="click-a">下架</view>
                    <view class="click-a">已售</view> -->
                    <navigator class="click-a" url="/pages/usedcar/sale/index/publish?car_source_no={{personDescribe.car_source_no}}">修改</navigator>
                    <view class="click-a" data-car_source_no="{{personDescribe.car_source_no}}" bindtap="onCarDelete">删除</view>
                </block>
                <block wx:elif="{{personDescribe.product_status == 1}}">
                    <!-- <view class="click-a">上架</view> -->
                    <navigator class="click-a" url="/pages/usedcar/sale/index/publish?car_source_no={{personDescribe.car_source_no}}">修改</navigator>
                    <view class="click-a" data-car_source_no="{{personDescribe.car_source_no}}" bindtap="onCarDelete">删除</view>
                </block>
                <block wx:elif="{{personDescribe.product_status == 2}}">
                    <!-- <view class="click-a">上架</view> -->
                    <navigator class="click-a" url="/pages/usedcar/sale/index/publish?car_source_no={{personDescribe.car_source_no}}">修改</navigator>
                    <view class="click-a" data-car_source_no="{{personDescribe.car_source_no}}" bindtap="onCarDelete">删除</view>
                </block>
                <block wx:elif="{{personDescribe.product_status == 4}}">
                    <view class="click-a" data-car_source_no="{{personDescribe.car_source_no}}" bindtap="onCarDelete">删除</view>
                </block>
                <block wx:else>
                    <view class="click-a" data-car_source_no="{{personDescribe.car_source_no}}" bindtap="onCarDelete">删除</view>
                    <navigator url="/pages/usedcar/sale/index/publish?car_source_no={{personDescribe.car_source_no}}">修改</navigator>
                </block>
            </block>
            <block wx:else>
                <view class="click-a" data-car_source_no="{{personDescribe.car_source_no}}" bindtap="onCarDelete">删除</view>
                <navigator class="click-a" url="/pages/usedcar/sale/index/publish?car_source_no={{personDescribe.car_source_no}}">修改</navigator>
            </block>
        </block>
        <block wx:else>
            <block wx:if="{{personDescribe.check_status == 2}}">
                <block wx:if="{{personDescribe.product_status == 1}}">
                    <!-- <view class="click-a">上架</view> -->
                </block>
                <block wx:if="{{personDescribe.product_status == 3}}">
                    <!-- <view class="click-a">下架</view> -->
                </block>         
            </block>
        </block>
    </view>
   </view>