/* pages/usedcar/sale/index/index.wxss */
.clearfix:after{content: '\200B'; display: block; clear: both; height: 0; overflow: hidden; visibility: hidden;}
.clearfix{zoom: 1;}
/*卖车方式*/
.mainbuy{padding-bottom:3.5rem;background: #F5F5F5;}
.buycar_box{border-bottom:.54rem solid #E3E3E3;background: #FFFFFF;}
.buycar_top{padding:.75rem;border-bottom: 2px solid #D9D9D9;}
.buycar_top image{height: 2.5rem;width:2.5rem;float: left;margin-top: .4rem;}
.buycar_top .sale_type{float: left;width:13rem;margin-left: .5rem;padding-top: .1rem;}
.buycar_top .sale_type text{display: block;}
.buycar_top .sale_type .sale_info{font-size: 36rpx;margin-bottom: .2rem;color:#333333;}
/*.buycar_top .sale_type .sale_info.color1{color:#49B6EF;}*/
.buycar_top .sale_type .sale_text{font-size: 26rpx;line-height: .9rem;color:#A5A5A5;}
.buycar_top .sale_btn{float: right;width:5rem;height: 1.8rem;font-size: 30rpx;line-height: 1.8rem;background-color: #F87C4D;color:#FFFFFF;text-align: center;border-radius: 4px;margin-top: .6rem;}
.process_type{line-height: 2.3rem;font-size: 38rpx;color:#333333;padding: 0 .75rem;background-color: #F5F5F9;display: block;}
.tr {width: 100%;display: flex;justify-content: space-between;}
.process_table{width:100%;border-collapse: collapse;border-right: 0;border-bottom: 0;}
.process_table .tbody .td{padding: 0 .75rem;border:1px solid #D8D8D8;width: 50%;}
.process_table .tbody .td .process_num{float:left;margin-top: .4rem;margin-right:.3rem;background-color: #F87C4D;border-radius: 50%;width: 1.5rem; height: 1.5rem;line-height: 1.5rem; text-align: center;color:#FFFFFF;font-size: 32rpx;}
.process_table .tbody .td text{font-size:30rpx;line-height: 2.3rem;float: left;}
.buycar_bottom{padding:.75rem;background-color: #FAFAFA;}
.bottom_cell{margin-bottom: .6rem;}
.bottom_cell>image{float: left;width:2.5rem;height:2.5rem;margin-right: .5rem;}
.bottom_cell .process_title{width: 16rem;float:left;font-size: 30rpx;color:#343434;font-weight: bold;line-height: 1.3rem;}
.bottom_cell .bottom_info{width: 16rem;float:left;font-size: 25rpx;line-height: 1.1rem;color:#595959;}
.footer{background:#FAFAFA;position: fixed;bottom: 0;left: 0;width: 100%;height: 3.5rem;clear: both;overflow:hidden;display:-webkit-box;display: -webkit-flex;display: flex;justify-content: center;-webkit-box-pack:center;}
.footer .sale_btn{float: left;background-color:#E02C36;color:#FFFFFF;height:2.5rem;line-height:2.5rem;width: 9.5rem;text-align: center;margin-top:.3rem;border-radius: 4px;}
.footer .sale_btn:nth-of-type(1){margin-right: .5rem;}