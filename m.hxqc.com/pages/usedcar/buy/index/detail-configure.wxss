.arrow-down {border-left: 10px solid transparent;border-right: 10px solid transparent;border-top: 10px solid #c0c0c0;font-size: 100%;height: 0;width: 0;}
.arrow-up {border-bottom: 10px solid #c0c0c0;border-left: 10px solid transparent;border-right: 10px solid transparent;height: 0;width: 0;}
.product_info .arrow-down,.product_info .arrow-up {position: absolute;right: 0.5rem;top: 40%;}
.product_info .title{ border-top:1px solid #ddd;padding:0.3rem; line-height:2rem; font-size:30rpx; height:2rem; font-weight:bold; color:#ff7043; background-color:#f5f5f5;position: relative;}
.product_info .open .title .arrow-down{transform:rotate(180deg);}
.product_info .open .ul{display: block;}
.product_info .ul{display: none;}
.product_info .li{ border-top:1px solid #D5D5D5;padding:10px 0;  width:100%; background-color:#fff;line-height: 1rem;}
.product_info .li .infos{ width:45%; display:inline-block;vertical-align:top; line-height:inherit; padding-left:4%; color:#323232;  font-size:28rpx;}
.product_info .li .infos:first-child{ color:#656565;}