page{background-color: #fafafa;}
.homeTop{position: relative; padding-top: 1px; height: 6rem; background: url(http://m.hxqc.com/wxapp/index/vip_orders/bghome.jpg) repeat-x; background-size: 100% 6rem;}
.homeTop form{margin-top: 2rem; width: 3rem; height: 3rem; margin-left: .8rem; float: left;}
.homeTop .headImg{width: 100%; height: 100%; border-radius:50%;}
.homeTop .laysHandle{position:absolute; top:0; left:0; width: 100%; height: 100%; border-radius:50%; }
.homeTop .userInfo{height: 3rem; margin-top: 2rem; margin-left: 4.5rem;}
.homeTop .userInfo view{color: #fff;  height: .9rem; font-size: .8rem;}
.homeTop .userInfo .welcome{padding-bottom: 0.3rem;}
.homeTop .userInfo .notReg{color:#fff; line-height: 2.5rem;}

.homeMain{ padding: .8rem; background-color: #FAFAFA;}
.homeMain .clearfix{overflow: hidden;}
.homeMain .mainCell{float: left; width: 33.33%; height: 6rem; border-left:1px solid #f0f0f0; border-top:1px solid #f0f0f0; text-align: center; box-sizing:border-box; color: #000;}
.homeMain .mainCell image{ width: 2rem; height: 2rem;  padding-top: 1rem;}
.homeMain .mainCell text{display:block; margin-top: .5rem; font-size: .7rem;}
.homeMain .mainCell.m0,.homeMain .mainCell.m1,.homeMain .mainCell.m2{border-top: 0;}
.homeMain .mainCell.m0,.homeMain .mainCell.m3,.homeMain .mainCell.m6{border-left: 0;}