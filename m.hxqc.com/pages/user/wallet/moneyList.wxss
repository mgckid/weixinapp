/*积分明细*/
page{height:100%}
.listPage{background-color: #FFFFFF;}
.ud_listTop{position: relative; height: 8.1rem; background: url(http://m.hxqc.com/wxapp/index/vip_orders/listbg.jpg); background-size: cover; text-align: center;}
.ud_listMain{position: absolute; top:50%; left:50%; transform:translate3d(-50%,-50%,0); -webkit-transform:translate3d(-50%,-50%,0);}
.ud_listMain .li{white-space: nowrap; color:#fff; font-size: 28rpx; line-height: 1.6rem; text-align: left;}
.ud_listMain .li strong{font-size: 36rpx; margin:0 .2rem; } 
.ud_listTop .pot_p1{padding:.5rem 1rem 1rem; color: #fff; font-size: 28rpx; line-height: 1.6rem; text-align: left;}
.ud_listTop .pot_p2{text-align: center; color: #fff; font-size: 62rpx;}
.ud_listTop .pot_p5{color: #fff; font-size: 36rpx;}
.ud_listTop .topAll{height: 3rem; margin-top: 0.5rem; text-align: center;}
.ud_listTop .topCal .p{display: inline; line-height: 1.6rem;}
.ud_listTop .topCal .pot_p3{color: #fff; font-size: 28rpx; text-align: left; padding-left: 1rem; float: left;}
.ud_listTop .topCal .pot_p4{color: #fff; font-size: 28rpx; text-align: right; float: right; padding-right: 1rem;}
.ud_listTop .topCal{height: 1.3rem;}

/*积分明细：每月明细*/
.listAll .month{background-color: #DCDCDC; height: 1.8rem; text-align: center;}
.listAll .month .p{display: inline; line-height: 1.8rem; font-size: 30rpx; color: #000000;}
.listAll .month .monLeft{text-align: left; padding-left: .8rem; float: left;}
.listAll .month .monRight{text-align: right; float: right; padding-right: .8rem; min-width:10.5rem; overflow: hidden; white-space: nowrap;}
.listAll .pointGet{overflow: hidden; display: block; background-color: #fff; border-top: 1px solid #c8c8c8; padding: .7rem 0}
.listAll .pointDate{float: left; text-align: center; color:#666; width: 2.4rem;}
.listAll .pointDate strong{display: block; font-weight: normal; font-size: 30rpx;}
.listAll .pointDate span{display: block; font-weight: normal; font-size: 24rpx; white-space: nowrap; overflow: hidden; line-height: 1;}
.listAll .pointTypes{float: left;  }
.listAll .pointTypes image{width: 1.9rem; height:1.9rem;}
.listAll .pointDet{margin-left: 4.5rem; line-height: 1.3;}
.listAll .pointDet .h4{font-size: 32rpx; color:#ff7043;font-weight: bold;}
.listAll .pointDet .p{font-size: 24rpx; color:#212121;}
.listAll .pointGet.type2 .pointTypes{border-color:#607d8b; color:#607d8b;}
.listAll .pointGet.type2 h4{color:#607d8b;}
.listAll .pointGet.type3 .pointTypes{border-color:#e02c36; color:#e02c36;}
.listAll .pointGet.type3 h4{color:#e02c36;}