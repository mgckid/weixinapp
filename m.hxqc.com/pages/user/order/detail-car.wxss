.clearfix:after{content: '\200B'; display: block; clear: both; height: 0; overflow: hidden; visibility: hidden;}
.clearfix{zoom: 1;}
/*订单详情*/
.part_nums{line-height:2.8rem; background:#fafafa; border: 1px solid #d5d5d5;  text-indent:.8rem;font-size: 36rpx;font-weight: bold;}
.order-list .ul {padding-bottom: .8rem;}
.order-list .li {padding: .8rem .8rem 0;overflow: hidden;}
.order-list .pic {float: left;width: 6rem;height:4rem;border: 1px solid #d5d5d5;margin-right: .6rem;}
.order-list .pic .img {width: 100%;height: 100%;}
.order-list .name {display: block;line-height: 1.2rem;max-height: 2.4rem;font-size: 32rpx;color: #3F3F3F;margin-bottom: .4rem;}
.order-list .sum {float: left;font-size: 30rpx;color: #e02c36;margin-top: .3rem;}
.order-list .info .num {margin-right: .8rem;font-size: 28rpx;float: right;color: #474747;}
.order_count{background: #fff;}
.order_count .bill_details { width:10rem; float:right; margin-right:0.8rem; z-index:1; }
.order_count .bill_details .li { text-align:right; border-bottom:2px dotted #d5d5d5; padding:0.5rem 0; zoom:1; }
.order_count .bill_details .li:nth-last-child(1) { border:none; }
.order_count .bill_details .li:after { display:block; content:""; clear:both; }
.order_count .bill_details .li .p { width:5rem; line-height:1.4rem; float:left;font-size: 30rpx; }
.order_count .bill_details .li .span {text-align:left; float:left; color:#d11522; margin-left:0.2rem; line-height: 1.4rem;font-size: 34rpx; }
.detLists .text{position:relative;padding: 1rem .75rem; overflow:hidden; line-height: 1.1rem; border-bottom: 1px solid #EBEBEB; font-size: 26rpx;}
.detLists .text:first-child{border-top: 1px solid #d5d5d5;}
.detLists .text .yeText{color: #3f3f3f; width: 40%; float: left; font-size: 32rpx;}
.detLists .text .yeSex{width: 34%;}
.detLists .text .riText{color: #666; margin-left: 40%; font-size: 32rpx; position:relative; height: 1rem;text-align:right;}
.detLists .text .riText .span{position: absolute; top:50%; width:100%; left:0; line-height: 1rem; transform:translateY(-50%); -webkit-transform:translateY(-50%); max-height:2rem; }
.car_color{height:1rem;}
.car_color .span{float: left;line-height: 1rem;font-size: 30rpx;color:#5A5A5A;}
.color_type{position: relative;width: 1rem;height: 1rem;margin-right: 2rem;margin-left: .2rem;background-color: #FFFFFF;float: left;box-shadow: 2px 2px 2px #bbbbbb;}
.color_type em{width: 1rem;height: 1rem;display: block;}
.color_two{float: left;position: relative;width: 1rem;height: 1rem;box-shadow: 2px 2px 2px #bbbbbb;margin-left: .2rem;}
.color_two em {display:block;width: 1rem;height: 50%;background-color: #fff;}
.payment_status{position:fixed; left:0; bottom:0; background-color: #fff; padding:0 .8rem; width:100%; box-sizing:border-box; line-height:2.5rem; height: 2.5rem; color:#d11522; font-weight:bold; box-shadow:0 -3px 3px rgba(0,0,0,.2); z-index:200; font-size: 36rpx;}