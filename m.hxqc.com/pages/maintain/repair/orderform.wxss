page{height: 100%;}
.box-submit{padding: 0 .8rem;}
.payButton{display: inline-block;text-align: center;width: 100%;font-size: 32rpx;height:2.2rem!important;line-height: 2.2rem!important;margin: .825rem 0;border: 0;background: #ff7143;color: #fff!important;border-radius: 0.2rem;
box-shadow: 0 .05rem .25rem 0 rgba(0,0,0,.3);-webkit-box-shadow: 0 .05rem .25rem 0 rgba(0,0,0,.3);}
.service{right: -100%;width: 100%;z-index: 9999;transition: all 300ms;position: fixed;top: 0px;bottom: 0px;box-shadow: rgba(0, 0, 0, 0.2) -4px 0px 5px 2px;opacity: 1;box-sizing: border-box;transform: translateX(0);background-color: rgb(255, 255, 255);}
.service.on{transform: translateX(-100%);}
.service-type {padding: .8rem;height: 100%;}
.service-type-sec {background-color: #FAFAFA;border-radius: 4px;margin-bottom: .8rem;}
.service-type-sec .title {background-color: #F5F5F5;border-top-left-radius: 4px;border-top-right-radius: 4px;border: 1px solid #DFDFDF;position: relative;}
.service-type-sec .title .h4 {font-weight: bold;line-height: 2rem;text-align: center;}
.service-type-sec .title .h4 .span {font-size: 32rpx;color: #ff7043;}
.service-type-sec .title .checked-box {position: absolute;top: 0;right: 0;background: url(http://www.tm.hxqc.com/wxapp/maintain/server_check01.png);background-size: 2rem;width: 2rem;height: 2rem;}
.service-type-sec .title .checked-box.select {background: url(http://www.tm.hxqc.com/wxapp/maintain/server_check.png);background-size: 2rem;}
.service-content-wrap {clear: both;overflow: hidden;border-left: 1px solid #DFDFDF;border-right: 1px solid #DFDFDF;border-bottom-left-radius: 4px;border-bottom-right-radius: 4px;}
.service-content-wrap .server-remark {float: left;width: 15%;font-size: 28rpx;color: #848484;padding: .4rem .2rem;}
.service-content-wrap .remark-text {width: 80%;float: left;margin: .3rem 0;border: 1px solid #D5D5D5;box-sizing: border-box;height: 3rem;background: #FFFFFF;}
.service-content-wrap .remark-text .textarea {font-size: 28rpx;line-height: .85rem;color: #979797;font-family: "黑体";width: 100%;border: none;resize: none;outline: none;overflow-y: hidden;padding: .15rem;height: 2.2rem;}
.service-content-wrap .remark-text .span {display: block;text-align: right;color: #979797;font-size: 28rpx;line-height: .85rem;padding: 0 .15rem 0;}
.type-btn {position: fixed;left: 0;bottom: 0;background-color: #ff7143;width: 100%;box-sizing: border-box;line-height: 2.2rem;height: 2.2rem;text-align: center;color: #FFF;font-size: 32rpx;}