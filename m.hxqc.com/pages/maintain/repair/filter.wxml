
<!-- 品牌筛选 -->
<view class="ftr_showbrand">
  <image src="http://m.hxqc.com/wxapp/shop/xpp.jpg" width="100%" class="pic"></image>
</view>
<view class="ftr-list">
  <scroll-view class="ftr-list-wrap" scroll-y="true">
    <block wx:for="{{brandList}}">
      <view class="li letter">
        <text>{{item.groupTag}}</text>
      </view>
      <block wx:for="{{item.group}}" wx:for-item="r">
        <view class="li" bindtap="onClickBrand" data-img="{{r.brandThumb}}" data-brand="{{r.brandName}}" data-brand-id="{{r.brandID}}">
          <view>
            <image src="{{r.brandThumb}}" />
            <text>{{r.brandName}}</text>
          </view>
        </view>
      </block>
    </block>
  </scroll-view>
</view>

<!-- 侧滑-车系 -->
<view class="caritems {{switch_slide_on_serie}}">
  <scroll-view class="caritems_wrap" scroll-y="true">
    <block wx:for="{{serieList}}">
      <view class="title">{{item.brandName}}
        <block wx:if="{{0 == index}}">
          <text catchtap="onClickBack" data-type="serie" class="link_back">返回>></text>
        </block>
      </view>
      <block wx:for="{{item.series}}" wx:for-item="r">
        <view class="li ">
          <view class="a " catchtap="onClickSerie" data-brand="{{brand}}" data-sub-brand="{{item.brandName}}"  data-brand-id="{{brandID}}" data-serie="{{r.seriesName}}" data-serie-id="{{r.seriesID}}">
            <view class="info ">
              <view class="name ">{{r.seriesName}}</view>
              <view class="cgp ">
                <view>
                  <text class="price ">{{r.priceRange}}</text>
                </view>
              </view>
            </view>
          </view>
        </view>
      </block>
    </block>
  </scroll-view>
</view>

<!-- 侧滑-车型 -->
<view class="filter_serie {{switch_slide_on_model}}">
  <scroll-view class="caritems_wrap" scroll-y="true">
    <block wx:for="{{modelList}}">
      <view class="title">{{item.year}}
        <block wx:if="{{0 == index}}">
          <text catchtap="onClickBack" data-type="model" class="link_back">返回>></text>
        </block>
      </view>
      <block wx:for="{{item.autoModel}}" wx:for-item="r">
        <view class="li ">
          <navigator  catchtap="onClickModel" data-brand="{{brand}}" data-brand-id="{{brandID}}" data-serie="{{serie}}" data-serie-id="{{serieID}}" data-model="{{r.autoModel}}" data-model-id="{{r.autoModelID}}">
            <view class="a ">
              <view class="info ">
                <view class="name ">{{r.autoModel}}</view>
                <view class="cgp ">
                  <view>
                    <text class="price ">{{r.priceRange}}</text>
                  </view>
                </view>
              </view>
            </view>
          </navigator>
        </view>
      </block>
    </block>
  </scroll-view>
</view>