page{height: 100%;}
.choose{position:relative;clear: both;overflow:hidden;padding: .5rem .45rem;border-bottom: .5rem solid #f0f0f0;}
.choose image{float: left;width: 2rem;height: 2rem;}
.choose .right{float: left;font-size: 30rpx;color: #454545;margin-left: .4rem;}
.choose .right .h5{font-weight: bold;}
.choose-text{position: absolute;right: .5rem;top: .5rem;color: #ff7043;text-decoration:underline;}
.shopbList{padding: .4rem .45rem 0;clear: both;overflow: hidden;}
.shopbList .shop_box{width:48.2%; float:left;position: relative;border: 1px solid #DADADA;margin-bottom: .4rem;}
.shopbList .shop_box:nth-child(2n+1){margin-right: .4rem;}
.shopbList .shop_box .img_top{width:100%;height: 5.5rem;}
.shopbList .shop_box .length{background-color:  rgba(0, 0, 0, 0.6);position: absolute;top: 4.2rem;color: #FFFFFF;font-size: 24rpx;line-height:1.4rem;width: 100%;box-sizing:border-box;text-align: right;padding-right: .4rem;}
.shopbList .shop_box .img_logo{position: absolute;background-color:#fff;width:1.3rem;height: 1.3rem;top: 4.15rem;left: .4rem;border:1px solid #DADADA;}
.shopbList .shop_bottom{background-color: #FFFFFF;padding: .4rem;}
.shopbList .shop_bottom .p{font-size: 30rpx;padding-bottom: .3rem;line-height: 1rem;min-height: 2rem;}
.shopbList .shop_bottom .book_btn{display:block;width: 100%; line-height: 1.4rem; background-color: #ff7143; font-size: 30rpx; color: #fff; text-align: center;}