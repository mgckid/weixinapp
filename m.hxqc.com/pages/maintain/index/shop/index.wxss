page{background-color: #fff;}
.second-menu {position: fixed;z-index: 3;top: 0;left: 0;width: 100%;height: 2.3rem;background-color: #F7F7F7;border-bottom: 1px solid #d7d7d7;box-sizing: border-box;}
.second-menu .a {float: left;line-height: 2.3rem;width: 50%;box-sizing: border-box;border-left: 1px solid #d7d7d7;text-align: center;font-size: 30rpx;color: #333;vertical-align: middle;}
.second-menu-ul{position: fixed; top:2.3rem; left:0; bottom:0; width:100%;opacity:0;z-index:-1;background: rgba(0,0,0,.3);transition:all .2s; -webkit-transition:all .2s;}
.second-menu-ul.on{opacity: 1;z-index: 2;background: rgba(0,0,0,.3);}
.second-menu-ul .lay{position: absolute; top:0; left:0; width:100%; height:100%; }
.second-menu-ul .slist{position: absolute; width:100%; z-index: 1; max-height:13.5rem; background-color: #fff; transform:translateY(-100%); -webkit-transform:translateY(-100%);}
.second-menu-ul .slist.on{ transform:translateY(0); -webkit-transform:translateY(0);  transition:all .2s; -webkit-transition:all .2s;}
.second-menu-ul .menu1{float: left; line-height: 1.6rem; width:100%; max-height:13.5rem; overflow-y:auto;}
.second-menu-ul .menu1 .li{border-bottom: 1px solid #f2f2f2; border-right: 1px solid #f2f2f2; font-size: 28rpx; padding: 0 .68rem; color:#666666;overflow: hidden;line-height: 2.5rem;}
.second-menu-ul .menu1 .li>.a{color: #666666;float: left;width: 100%;}
.second-menu-ul .menu1 .li.select>.a{color:#FF7043;}
.second-menu-ul .menu1 .li.shop_length{padding: .15rem 2.2rem;}
.second-menu-ul .menu1 .li .span.shop_area{float: left;}
.second-menu-ul .menu1 .li .span.shop_num{float: right;}
.second-menu-ul .menu1 .li .strong{color:#757575;}
.second-menu-ul .menu1 .li_on {color:orange;}

.second-menu-ul .menu2_w{margin-left: 4rem; background-color: #eaeaea; line-height: 1.6rem; height: 100%; overflow-y:auto;}
.second-menu-ul .menu2 .li{border-bottom: 1px solid #f2f2f2; font-size: 28rpx; text-indent: .6rem; color:#000;}
.second-menu-ul .menu2 .a{display: block; color:#000;}
.second-menu .arrow {margin-left: .6rem;display: inline-block;width: .5rem;height: .25rem;background: url(http://www.tm.hxqc.com/wxapp/maintain/arrow.png) no-repeat center center/100% auto;
	transform: rotate(180deg);-webkit-transform: rotate(180deg);vertical-align: middle;transition: all .2s;-webkit-transition: all .2s;}
.second-menu .on .arrow {transform: rotate(0deg);-webkit-transform: rotate(0deg);}
.uitem_list {padding-top: 2.3rem;}
.uitem_list .li {overflow: hidden;padding: .8rem;background-color: #fff;border-bottom: 1px solid #d5d5d5;position: relative;}
.uitem_list .always_go {width: 1.9rem;height: 1.9rem;position: absolute;top: .8rem;left: 28%;background-image: url("http://www.tm.hxqc.com/wxapp/maintain/always_go.png");background-repeat: no-repeat;background-size: 1.7rem;}
.uitem_list .img {float: left;width: 35%;max-height: 3.5rem;border: 1px solid #d7d7d7;}
.kshop_cell {float: left;padding-left: .7rem;width: 59%;}
.kshop_cell .shop_length {margin-bottom: .2rem;clear: both;overflow: hidden;}
.kshop_cell .shop_length .shop_name {float: left;font-size: 28rpx;color: #3E3E3E;line-height: 1.2rem;font-weight: bold;}
.kshop_cell .shop_length .length {float: right;color: #F4F4F4;background-color: #A7A5A5;padding: 0 .5rem;height: .85rem;line-height: .85rem;font-size: 26rpx;text-align: center;border-radius: 40px;}
.kshop_cell .evaluate {font-size: 28rpx;color: #333333;line-height: 1.2rem;clear: both;overflow: hidden;}
.kshop_cell .evaluate .span {float: left;}
.kshop_cell .evaluate .span.acolor {color: #9B9B9B;}
.kshop_cell .evaluate .span.price {color: #E02C36;margin-left: .3rem;}
