.cansLay_table{border:1px solid #d9d9d9; border-radius:4px;}
.cansLay_table .li{line-height: 1.75rem; border-top: 1px solid #d9d9d9; font-size: 24rpx; padding:0 .68rem; overflow: hidden;}
.cansLay_table .li:first-child{border:0;}
.cansLay_table .li .span{color:#3f3f3f;}
.cansLay_table .li .em{float:right; color:#979797;}
.cansLay .tip{line-height: 1.2rem; font-size: 24rpx; color:#999; margin:.3rem 0;}
.cansLay .total{font-size: 28rpx; color:#000033; text-align: right; line-height: 1rem;}
.cansLay .total .strong{color:#e02c36; font-size: 32rpx; font-weight: normal;}
