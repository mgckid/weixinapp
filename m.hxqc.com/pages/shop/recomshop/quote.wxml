      <view class="a">
        <image src="http://m.hxqc.com/wxapp/shop/icon-canshu.png"></image>
        <text class="span">产品参数</text>
        <image src="http://m.hxqc.com/wxapp/shop/icon-rjt.png" class="arrow_right"></image>
        <text class="b"></text>
      </view>
    </view>
  </navigator>
</view>

