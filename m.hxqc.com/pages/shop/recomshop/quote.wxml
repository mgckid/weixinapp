<!-- 咨询弹出层 -->
<view class="sideslipMask {{maskShow}}"></view>
<view class="mychat {{maskShow}}">
  <view class="mychat-content">
    <view class="mychat-header">
      <view class="mychat-close span" bindtap="maskHide"></view>
      <view class="mychat-title">发表咨询</view>
    </view>
    <form action="/wuhan/Quotation/index/consult.html" id="chat-form" name="chat-form" method="post">
      <view class="hx-chat-box">
        <view class="alert-content">
          <view class="alert alert-success">
            <view>咨询提交后，我们有专人工作人员进行回复，请耐心等待！</view>
          </view>
          <view class="alert alert-danger hidden">
            <view class="span">咨询问题不能为空！</view>
          </view>
        </view>
        <view>
          <view class="clearfix">
            <view class="hx-chat-info">咨询内容：</view>
            <textarea class="textarea" name="question"></textarea>
          </view>
          <view id="column_refer_result" style="display:none;">
            <view class="column_refer_result"></view>
          </view>
          <view class="buttons">
            <button class="hx-chat-submit" type="submit">提交</button>
            <view class="wordage">剩余字数：
              <text id="sy" style="color:Red;">250</text>
            </view>
          </view>
        </view>
      </view>
    </form>
  </view>
</view>