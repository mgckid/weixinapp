<!-- 导入loading模板 -->
<import src="/template/loading.wxml" />
<template is="pageLoading" data="{{pageLoading}}" />

<view class="car-detailspage pagetop">
  <view class="car-topimg">
    <view class="a">
      <image mode="widthFix" src="{{info.baseInfo.itemPic}}" width="100%"></image>
      <view class="span">{{info.baseInfo.itemName}}
        <!--<image class="imgmore" src="http://m.hxqc.com/wxapp/shop/icon-tupianmore.png"></image>-->
      </view>
    </view>
  </view>
  <view class="car-price">
    <view class="lcj">￥{{info.baseInfo.itemPrice}}</view>
    <view class="ckj">参考总价：{{info.baseInfo.itemTotalPrice}}
      <!--<image src="http://m.hxqc.com/wxapp/shop/note.png"></image>-->
    </view>
  </view>
  <navigator url="/pages/shop/recomshop/quote-address">
    <view class="car-cstit">
      <view class="a" catchtap="onNav" data-lat="{{info.shopInfo.shopLocation.latitude}}" data-lng="{{info.shopInfo.shopLocation.longitude}}">
        <image src="http://m.hxqc.com/wxapp/shop/icon-area1.png"></image>
        <text class="span">店铺地址</text>
        <image src="http://m.hxqc.com/wxapp/shop/icon-rjt.png" class="arrow_right"></image>
        <text class="b"></text>
      </view>
    </view>
  </navigator>
  <view class="car-colormain">
    <view class="car-cstit">
      <image src="http://m.hxqc.com/wxapp/shop/icon-color1.png"></image>
      <text class="span">车辆颜色</text>
    </view>
    <view class="dd">
      <view class="car-colorList">
        <view class="title">车身：</view>
        <view class="box">
          <block wx:for="{{info.baseInfo.appearance}}">
            <text class="span" style="background-color:{{item.color}}"></text>
          </block>
        </view>
      </view>
    </view>
  </view>
  <view class="car-ptmain {{carImg_on}}" bindtap="carImg_show">
    <view class="car-cstit">
      <image src="http://m.hxqc.com/wxapp/shop/icon-tupian.png"></image>
      <text class="span">图文介绍</text>
      <image src="http://m.hxqc.com/wxapp/shop/icon-toparrow2.png" class="arrow_top"></image>
    </view>
    <view class="dd">
      <block wx:for="{{info.baseInfo.wxml_introduce}}">
        <block wx:if="{{ 'txt'=== item.type}}">
          <view>
            <view class="p">{{item.txt}} </view>
          </view>
        </block>
        <block wx:elif="{{ 'img'===item.type}}">
          <view>
            <image mode="widthFix" src="{{item.src}}" />
          </view>
        </block>
      </block>
    </view>
  </view>
  <!--<navigator url="/pages/shop/recomshop/quote-comment">
    <view class="car-cstit">
      <view class="a">
        <image src="http://m.hxqc.com/wxapp/shop/buy/icon-koub.png"></image>
        <text class="span">口碑评论</text>
        <image src="http://m.hxqc.com/wxapp/shop/icon-rjt.png" class="arrow_right"></image>
        <text class="b"></text>
      </view>
    </view>
  </navigator>-->
  <navigator url="/pages/shop/recomshop/quote-paramenter?itemID={{info.baseInfo.extID}}">
