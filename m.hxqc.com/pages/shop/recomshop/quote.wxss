.car-detailspage {
  padding-bottom: 2.3rem;
}

/*车型报价详情页*/

.car-detailspage {
  background-color: #fff;
}

.car-topimg {
  position: relative;
}

.car-topimg .a>image {
  width: 100%;
}

.car-topimg .a .span {
  position: absolute;
  box-sizing: border-box;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 1.92rem;
  line-height: 1.92rem;
  font-size: 24rpx;
  color: #fff;
  padding: 0 0.5rem;
  background-color: rgba(0, 0, 0, 0.7);
}

.car-topimg .imgmore {
  float: right;
  width: 0.85rem;
  margin-top: 0.48rem;
  height: 0.85rem;
}

.car-price {
  background-color: #fcf7ea;
  padding: 0 0.6rem;
  line-height: 2.3rem;
  height: 2.3rem;
}

.car-price .lcj {
  float: left;
  color: #e02c36;
  font-size: 32rpx;
  font-weight: bold;
}

.car-price .ckj {
  float: right;
  font-size: 28rpx;
  color: #fe8d6a;
}

.car-price image {
  height: 0.8rem;
  width: 0.8rem;
  margin-left: 0.2rem;
}

.car-cstit {
  padding: 0.68rem;
  height: 1.02rem;
  border-top: 1px solid #d5d5d5;
  background-color: #f5f5f5;
}

.car-cstit .a {
  display: block;
  height: 100%;
}

.car-cstit>.a {
  display: block;
  overflow: hidden;
}

.car-cstit image:nth-child(1) {
  float: left;
  width: 1.1rem;
  height: 1.1rem;
}

.car-cstit .span {
  float: left;
  line-height: 1rem;
  color: #e02c36;
  font-weight: bold;
  font-size: 28rpx;
  margin-left: 1.5rem;
}

.car-cstit image:nth-child(3) {
  float: right;
}

.arrow_right {
  height: 0.8rem;
  width: 0.5rem;
  margin-top: 0.1rem;
}

.arrow_top {
  width: 0.78rem;
  height: 0.5rem;
  margin-top: 0.37rem;
}

.car-ptmain.on .arrow_top {
  transform: rotate(180deg);
}

.car-ptmain .dd {
  display: none;
}

.car-ptmain.on .dd {
  display: block;
}

.car-ptmain .dd image {
  width: 100%;
}

.car-cstit .b {
  float: right;
  color: #979797;
  font-size: 0.6rem;
  font-weight: normal;
  margin-right: 0.6rem;
}

.car-param {
  border-bottom: 4px solid #e7e7e7;
  background-color: #fcf7ea;
}

.car-param .hx_price {
  line-height: 2.5rem;
  height: 2.5rem;
  color: #e02c36;
  font-size: 0.6rem;
  border-bottom: 1px solid #eee6d3;
  overflow: hidden;
}

.car-param .hx_price .uleft {
  padding: 0 0.68rem;
  display: block;
  overflow: hidden;
}

.car-param .hx_price .uright {
  float: right;
  width: 3.4rem;
  border-left: 1px solid #eee6d3;
  text-align: center;
}

.car-param .hx_price .strong {
  font-size: 0.85rem;
}

.car-param .hx_price .i {
  font-size: 0.6rem;
  float: right;
}

.car-param .hx_price .a {
  float: right;
  color: #2396ef;
  font-size: 0.6rem;
}

.car-param .hx_price_c {
  line-height: 1.07rem;
  padding: 0.4rem 0.68rem;
  overflow: hidden;
}

.car-param .hx_price_c>.p {
  float: left;
  width: 50%;
  color: #98958d;
  font-size: 0.6rem;
}

.car-param .hx_price_c .span {
  color: #3f3e3a;
}

/*.car-param .hx_price_c u{color:#3f3e3a; text-decoration: line-through;}*/

.car-param image.low {
  height: 0.4rem;
  margin-left: 5px;
}

