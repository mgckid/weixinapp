/*新闻资讯详情页*/
page{padding-bottom: 6rem;}
s{text-decoration: line-through;}
.sArticleDetail{padding:0 .68rem .8rem; background-color: #fafafa;}
.sArticleDetail .sdTitle{padding:.6rem 0 .2rem; font-size: 32rpx; color:#333; font-weight: bold; line-height: 1.2rem;}
.sArticleDetail .sdTitleRe{padding:.6rem 0 .2rem; font-size: 32rpx; color:#e02c36; text-align: center; font-weight: bold; line-height: 1;}
.sdTitle_cent{line-height: 1.7rem; font-size: 24rpx; color: #e02c36; background-color: #fff2e1; margin: .3rem -.68rem; text-indent: .68rem;}
.sArticleDetail .sdTitle_down{overflow: hidden;}
.sArticleDetail .sdTitle_down .span{float:left; margin-right:.6rem; color:#999; font-size: 24rpx; line-height: 1.1rem;}
.saContent{font-size: 28rpx; color:#666; line-height: 1.4rem; padding:.4rem 0; font-family: -apple-system-font,"Helvetica Neue","PingFang SC","Hiragino Sans GB","Microsoft YaHei",sans-serif; color:#3e3e3e;}
.saContent table{width:100%!important;}
/*.saContent>view{padding:.6rem 0 0;}*/
.saContent a{color:#333;}
.saContent image{width:100%; }
.saShare{display:block; padding:.2rem 0; line-height: .95rem; font-size: 24rpx; font-weight: bold; color:#333;}
.saShare image{height: .75rem;}
.saDeclare{margin-top: .4rem; padding:.4rem .65rem; font-size: 24rpx; border:1px solid #e02c36; color:#e02c36; line-height: .95rem;}
/*促销信息详情*/
.zx_table{border:1px solid #d5d5d5; border-radius:2px; overflow: hidden; margin:2rem 0 .4rem;}
.zx_tableTop{line-height: 1.7rem; text-align: center; font-size: 28rpx; font-weight: bold; color:#333; background-color: #f5f5f5;}
.zx_tableLi{border-top: 1px solid #d5d5d5; background-color: #fff; padding:.4rem;}
.zx_tableLi .name{font-size: 28rpx; font-weight: bold; color:#333; line-height: 1.4rem;}
.zx_tableLi .info{overflow: hidden;}
.zx_tableLi .info span{float:left; width:50%; font-size: 24rpx; line-height: 1.2rem;}
.zx_tableLi .info image{height: .6rem!important; width:auto; position: relative; top:-.06rem;}
.zx_tableFoot{line-height: 2rem; text-align: center; font-size: 26rpx; color:#999; background-color: #fff; border-top: 1px solid #d5d5d5;}
.xjBtns{overflow: hidden; padding:.68rem;display:-webkit-box;display:-webkit-flex;display: flex;justify-content: center;-webkit-box-pack:center;}
.xjBtns .a{display: block; width:48%; text-align: center; box-shadow:0 2px 5px 1px rgba(0,0,0,.15); background-color:#ff7143; color:#fff; border-radius:.1rem; font-size: 32rpx; line-height: 1.9rem;}
.xjBtns .a:nth-of-type(1){margin-right: 4%;}
.xjFoot{border-top:1px solid #d5d5d5; box-sizing:border-box; padding:.4rem 0; overflow: hidden; background-color: #fff; z-index: 999;}
.xjFoot text{float:left; text-align: center; width:55%; font-size: 24rpx; color:#999; line-height: 1.6rem;font-weight: normal;}
.xjFoot .a{float:right; width:42%; margin-right: 3%; box-shadow:0 2px 5px 1px rgba(0,0,0,.15); background-color: #ff7143; color:#fff; text-align: center; font-size: 32rpx; line-height: 1.9rem;
border-radius: .2rem;font-weight: normal;}
/*促销信息详情-公司地址*/
.sd_comInfos{border:1px solid #d5d5d5; background-color: #f5f5f5; border-radius:.1rem; margin-top: .6rem; padding:.6rem;clear: both;overflow: hidden;}
.sd_comInfos .img{float:left; width:2.7rem; height: 2.7rem; text-align: center; background-color: #fff;}
.sd_comInfos .img image{width:2rem; height:2rem; margin: .35rem auto 0;}
.sd_comInfos .text{margin-left: 3rem;}
.sd_comInfos .name{line-height: 1.4rem;font-size: 32rpx; font-weight: bold; color:#333;  overflow: hidden; text-overflow:ellipsis; white-space: nowrap;}
.sd_comInfos .address{line-height: 1rem; font-size: 26rpx; color:#333; overflow: hidden;}