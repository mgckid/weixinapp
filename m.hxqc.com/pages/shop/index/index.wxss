page{background-color: #efefef;}
/**index.wxss**/
swiper{height: 355rpx;}
.slide-image{width:100%; height:100%;}
.ecarMenu{display:flex; width: 100%; border-bottom: 1px solid #d9d9d9; background-color: #fff;}
.menu_in{width:25%; text-align: center; font-size: 28rpx; padding:.5rem 0!important;}
.menu_in image{width:3rem; height:3rem; display:block; margin:0 auto .5rem; }
.com_title{font-size: 28rpx; line-height: 1.2rem; padding:.68rem; overflow: hidden; border-top:1px solid #d9d9d9; background-color: #fff; margin-top: .8rem;}
.com_title .s{float: left; color:#e02c36; font-weight: bold;}
.com_title .more{float:right; padding-right: .4rem; color:#3f3f3f; font-size: 26rpx;}
.com_title .more image{width:.7rem; height:.7rem;position:relative;top: .1rem;}
/*新闻资讯列表页*/
.sArticleList{background-color: #fafafa;}
.sArticleList .vi_a{display: block; padding:.6rem .68rem .4rem; overflow: hidden; border-bottom: 1px solid #d5d5d5;}
.sArticleList .img{float:left; width:5.5rem;height:3.5rem;}
.sArticleList .detail{margin-left: 32%; }
.sArticleList .hname{font-size: 28rpx; color:#000; max-height: 2rem; line-height: 1.2rem; margin-bottom: .15rem; overflow: hidden;}
.sArticleList .time{font-size: 28rpx; color:#999; height: 1.1rem; line-height: 1rem; margin-bottom: .1rem; overflow: hidden; text-overflow:ellipsis; white-space: nowrap;}
.sArticleList .time b{color:#e02c36}
.sArticleList .intro{font-size: .54rem; color:#666; line-height: .8rem; overflow: hidden; max-height:1.6rem;}
/*新车销售*/
.sArticleList .price{line-height: 1.15rem; font-size: 24rpx; color:#333;}
.sArticleList .price text{color:#e02c36;}
/*店铺列表*/
.shopvList{padding: .68rem; border-bottom: 1px solid #d5d5d5; background-color: #fafafa; overflow: hidden;}
.shopvList .vLeft{width:5.5rem; float:left;}
.shopvList .vLeft .img {display: block; width:5.5rem; height:3.5rem;}
.shopvList .vLeft .signBlock{display: block; height: 1.5rem; background-color: #f0f0f0; text-align: center;}
.shopvList .vLeft .sign{height:1rem; width:1rem; margin-top: .25rem;}
.shopvList .vRight{margin-left: 6rem; position:relative;}
.shopvList .vRight .vName{display:block; font-size: 30rpx; font-weight: bold; color:#3f3f3f; line-height: 1rem; margin-bottom: .6rem; padding-right: 2.4rem;}
.shopvList .vRight .vNews{}
.shopvList .vRight .vNews .a{display:block; font-size: 26rpx; color:#666; height:1.4rem; overflow: hidden; text-overflow:ellipsis; white-space: nowrap;}
.shopvList .vRight .vNews .a.hot{color:#e02c36;}
.shopvList .vRight .site{position:absolute; top:0; right:0; line-height: .8rem; padding:0 .4rem; border-radius:.4rem; background-color: #a7a5a5; color:#fff; font-size: .54rem;}   